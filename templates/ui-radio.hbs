<label for="">{{{label}}}</label>
{{#each items as |item|}}
    <div class="form-check">
  <label class="form-check-label">
    <input type="radio" class="form-check-input" name="{{{../name}}}" id="{{{../id}}}-{{{item.value}}}" value="{{{item.value}}}"{{#if item.checked}} checked{{/if}}>{{{item.label}}}
  </label>
</div>
{{/each}}